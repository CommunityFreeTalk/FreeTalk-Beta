<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.freetalk.mapper.community.SearchMapper">

    <select id="selectBySingleHashTag" parameterType="String" resultType="com.example.freetalk.community.dto.ResultGroupDTO">
        SELECT c.*,
               Group_concat(h.ht_name) as hashTag
        FROM   cm c
                   LEFT JOIN tr t
                             ON c.c_key = t.c_key
                   LEFT JOIN ht h
                             ON t.ht_id = h.ht_id
        WHERE  c.c_key = ANY (SELECT c_key
                              FROM   tr
                              WHERE  ht_id = (SELECT ht_id
                                              FROM   ht
                                              WHERE  ht_name =  #{keyword}))
        GROUP  BY c_key;
    </select>

    <select id="selectByHashTagList" parameterType="java.util.List" resultType="com.example.freetalk.community.dto.ResultGroupDTO">
        SELECT c.*,
               Group_concat(h.ht_name) as hashTag
        FROM   cm c
                   LEFT JOIN tr t
                             ON c.c_key = t.c_key
                   LEFT JOIN ht h
                             ON t.ht_id = h.ht_id
        WHERE  c.c_key = ANY (SELECT c_key
                              FROM   tr
                              WHERE  ht_id = ANY (SELECT ht_id
                                              FROM   ht
                                              WHERE  ht_name IN
        <foreach collection="list" item="value" index="idx" separator="," open="(" close=")">
            #{value}
        </foreach>))
        GROUP  BY c_key;
    </select>

</mapper>